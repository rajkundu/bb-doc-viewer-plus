{
  "manifest_version": 2,
  "name": "Bb Doc Viewer+",
  "version": "2.2.1",

  "description": "Various improvements to Blackboard, especially for viewing documents",

  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.api.blackboard.com/*", "*://learn.bu.edu/*"],
      "js": ["index.js"],
      "all_frames": true
    }
  ]
}
